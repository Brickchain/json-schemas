{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://developer.brickchain.com/schemas/signature-request.json",
    "title": "Signature Request",
    "description": "This Signature Request is used to request a user to sign a contract.",
    "type": "object",
    "allOf": [ { "$ref": "https://developer.brickchain.com/schemas/base.json" } ],
    "properties": {
        "replyTo": {
            "type": "array",
            "item": {
                "type": "string",
                "format": "uri",
                "description": "A callback address of where to send a response."
            },
            "description": "A list of callback addresses of where to send a response."
        },
        "contract": {
            "type": "object",
            "description": "The contract requested for signing.",
            "items": {
                "allOf": [ { "$ref": "https://developer.brickchain.com/schemas/contract.json" } ]
            }
        },
        "keyLevel": {
            "type": "integer",
            "description": "The minimum required key level."
        }
    },
    "required": [
        "replyTo",
        "contract"
    ]
}
