{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://developer.brickchain.com/schemas/multipart.json",
    "title": "Multipart",
    "description": "This is the Multipart schema, used for embedding multiple document into one.",
    "type": "object",
    "allOf": [ { "$ref": "https://developer.brickchain.com/schemas/base.json" } ],
    "properties": {
        "parts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "encoding": {
                        "type": "string",
                        "description": "The used encoding of the document part."
                    },
                    "name": {
                        "type": "string",
                        "description": "The name of the part."
                    },
                    "document": {
                        "type": "string",
                        "description": "The document itself."
                    },
                    "uri": {
                        "type": "string",
                        "format": "uri",
                        "description": "TODO"
                    }
                }
            },
            "description": "All parts of this multipart document."
          }
    },
    "required": [
        "parts"
    ]
}
